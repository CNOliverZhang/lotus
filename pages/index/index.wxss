button {
  border-radius: 0;
  padding-left: 0;
  padding-right: 0;
  margin-left: 0;
  margin-right: 0;
  line-height: initial;
  background-color: rgba(0, 0, 0, 0);
}

button::after {
  border-radius: 0;
  border: none;
}

.zoom {
  position: fixed;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  right: 80rpx;
  bottom: 80rpx;
  height: 300rpx;
  overflow: visible;
  z-index: 10;
}

.zoom-button {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  color: #333333;
  background-color: #ffffff;
  box-shadow: 5rpx 5rpx 5rpx #333333;
  filter: brightness(1);
  transition: 0.5s;
}

.zoom-button__hover {
  filter: brightness(0.7);
  transition: 0.5s;
}

.holder {
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100vw;
  height: 100vh;
}

.map {
  width: 100%;
  height: 100%;
}

.position {
  position: absolute;
  width: 10vw;
  height: 10vw; 
  z-index: 5;
  filter: brightness(1);
  transition: 1s;
}

.position__hover {
  filter: brightness(0.5);
  transition: 1s;
}

.flag {
  width: 100%;
  height: 100%;
}